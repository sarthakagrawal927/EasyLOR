datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  PENDING
  GRANTED
  REJECTED
}

model LORApplication {
  id                 Int      @id @default(autoincrement())
  dueDate            DateTime
  statementOfPurpose String
  course             String
  university         String
  draftURL           String
  studentID          Int
  facultyID          Int
  status             Status   @default(PENDING)

  student Student @relation(fields: [studentID], references: [id])
  faculty Faculty @relation(fields: [facultyID], references: [id])
  @@unique([studentID, facultyID])
}

model Reminder {
  id        Int     @id @default(autoincrement())
  message   String
  facultyID Int
  studentID Int
  viewed    Boolean

  student Student @relation(fields: [studentID], references: [id])
  @@unique([studentID, facultyID])
}

model TestScore {
  id    Int    @id @default(autoincrement())
  exam  String
  score String

  student   Student @relation(fields: [studentID], references: [id])
  studentID Int
  @@unique([exam, score])
}

model Department {
  id      Int       @id @default(autoincrement())
  name    String
  Student Student[]
  Faculty Faculty[]
}

model Student {
  id                   Int              @id @default(autoincrement())
  regNo                String           @unique
  email                String           @unique
  password             String
  firstName            String
  lastName             String?
  department           Department       @relation(fields: [departmentID], references: [id])
  institution          String
  contact              String           @unique
  profilePhoto         String           @unique
  appliedUniversities  String[]
  acceptedUniversities String[]
  testScores           TestScore[]
  lorApplications      LORApplication[]
  reminders            Reminder[]
  departmentID         Int
}

model Faculty {
  id                Int              @id @default(autoincrement())
  email             String           @unique
  password          String
  firstName         String
  lastName          String?
  department        Department       @relation(fields: [departmentID], references: [id])
  institution       String
  contact           String           @unique
  profilePhoto      String           @unique
  lorApplications   LORApplication[]
  lorDraftTemplates String[]
  departmentID      Int
}
